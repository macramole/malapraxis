body {
    font-family: "Droid Serif", serif;
}

p {
    line-height: 1.5em;
}

header {
	color: #fff;
	position: fixed;
	/* background-color: #128584; */
	width: 95%;
	padding: 1em 0 0.5em;
	z-index: 100;
	box-sizing: border-box;
	left: 50%;
	transform: translateX(-50%);
	border-bottom: 1px solid white;

    #logo {
        float: left;
    }

    nav {
        float: right;

        ul {
            list-style: none;
            padding: 0;
            margin: 0;

            li {
                float: left;
                margin-left: 2.5em;
                line-height: 1.8em;

                a {
                    text-decoration: none;
                    color: inherit;

                    &:hover {
                        text-decoration: underline;
                    }
                }
            }
        }
    }
}

